#include <stdio.h>
int main (){
	int n;
	printf("Nhap vao so phan tu cua mang: ");
	scanf("%d", &n);
	int numbers[n];
	int size = sizeof(numbers) / sizeof(int);
	for(int i = 0; i < size; i++)
	{
		printf("numbers[%d] = ", i);
		scanf("%d", &numbers[i]);
	}
	int max = numbers[0];
	int min = numbers[0];
	for (int i = 0; i < size; i++)
	{
		if(numbers[i + 1] > max)
		{
			max = numbers[i + 1];
		}
		else if(numbers[i + 1] < min)
		{
			min = numbers[i + 1];
		}
	}
	
	printf("Gia tri lon nhat cua mang la %d\n", max);
	printf("Gia tri nho nhat cua mang la %d", min);
}
